{
    "definition": {
      "openapi": "3.0.0",
      "info": {
        "title": "Sample API",
        "description": "",
        "version": "0.1.0"
      },
      "servers": [
        {
          "url": "http://localhost:8080/v1",
          "description": "local server"
        }
      ],
      "paths": {
        "/user": {
          "post": {
            "tags": ["User"],
            "description": "This api create new user. Mobile phone send to the server(Yangi foydalanuvchini yaratadi. Mobile phone serverga yuboradi)",
            "requestBody": {
              "description": "Important elements in this body(Asosiy elementlar)",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            },
            "responses": {
              
            }
          }
        },
        "/user/login": {
          "post": {
            "tags": ["User"],
            "description": "Login User",
            "requestBody": {
              "description": "Login with email",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "required": ["email","password"],
                    "properties": {
                      "email": {
                        "type": "string",
                        "example": "string007@gamil.com"
                      },
                      "password": {
                        "type": "string",
                        "example": "string1234"
                      }
                    }
                  }
                }
              }
            },
            "responses": {
              
            }
          }
        }
      },
      "components": {
        "schemas": {
          "User":{
            "type": "object",
            "required": ["name","email","password", "status", "tel_number", "device_number"],
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "status": {
                "type": "number"
              },
              "tel_number": {
                "type": "string"
              },
              "device_number": {
                "type": "string"
              }
            }
          },
          "Device": {
            "type": "object",
            "required": ["device_number", "name"],
            "properties": {
              "name": {
                "type": "string"
              },
              "device_number": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "apis": ["./routes/user.js"]
  }